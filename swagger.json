{
  "openapi": "3.0.0",
  "info": {
    "title": "Telegram Authorization Service",
    "version": "1.0.0"
  },
  "paths": {
    "/measurement": {
      "post": {
        "summary": "Add a new measurement",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Measurement"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Measurement added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeasurementResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "409": {
            "description": "User not found"
          }
        }
      },
      "get": {
        "summary": "Get measurements by type",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "asc"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Measurements retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeasurementsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          }
        }
      },
      "put": {
        "summary": "Update a measurement",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Measurement"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Measurement updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeasurementResponse"
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          },
          "404": {
            "description": "Measurement not found or not authorized"
          }
        }
      },
      "delete": {
        "summary": "Delete a measurement",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Measurement deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeleteResponse"
                }
              }
            }
          },
          "404": {
            "description": "Measurement not found or not authorized"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Measurement": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "integer",
            "description": "Timestamp of the measurement (defaults to current time)"
          },
          "type": {
            "type": "string",
            "description": "Type of measurement"
          },
          "meta": {
            "type": "object",
            "description": "Additional metadata for the measurement"
          }
        },
        "required": ["type"]
      },
      "MeasurementResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "measurement": {
            "$ref": "#/components/schemas/Measurement"
          }
        }
      },
      "MeasurementsResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "measurements": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Measurement"
            }
          }
        }
      },
      "DeleteResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
